        <RelativeLayout
            android:id="@+id/rlayoutimage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="44dp"
                android:src="@drawable/login_banner" />
        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="-25dp"
            android:text="Login"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp"
            android:textStyle="normal" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:background="@drawable/buttonstyle_round_white"
            android:orientation="horizontal"
            tools:ignore="RtlCompat">


            <EditText
                android:id="@+id/user_emil_edt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="20dp"
                android:background="@null"
                android:paddingStart="@dimen/_15sdp"
                android:hint="Email Address/Phone Number"
                android:padding="8dp"
                android:singleLine="true"
                android:textColorHint="@color/black"
                android:textSize="13sp"

                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:background="@drawable/buttonstyle_round_white"
            android:orientation="horizontal"
            tools:ignore="RtlCompat">


            <com.subhrajyoti.passwordview.PasswordView
                android:id="@+id/user_Password_edt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="20dp"
                android:paddingStart="@dimen/_15sdp"
                android:background="@null"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="Password"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="textPassword"
                android:padding="8dp"
                android:singleLine="true"
                android:textColorHint="@color/black"
                android:textSize="13sp" />

        </LinearLayout>


        <RelativeLayout
            android:id="@+id/loginlay"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_20sdp">

            <Button
                android:id="@+id/login_btn"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/buttonstyle_round_blue"
                android:padding="5dp"
                android:text="Login"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold" />


        </RelativeLayout>

        <TextView
            android:id="@+id/forgotpassword_tex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="5dp"
            android:text="Forgot Password?"
            android:textColor="@color/primary_color_blue"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/login"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_35sdp"
            android:padding="5dp"
            android:text="Not registered? no problem"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="14sp"
            tools:ignore="RtlCompat" />


        <RelativeLayout
            android:id="@+id/ll"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/_5sdp">

            <Button
                android:id="@+id/sign_up_btn"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/buttonstyle_round_red"
                android:padding="5dp"
                android:text="Sign Up"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold" />


        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>