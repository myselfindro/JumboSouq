<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/hight_40"
            android:layout_marginLeft="@dimen/padding_20"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:padding="@dimen/padding_10"
            android:src="@drawable/ic_left_arrow" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="My Account"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:textSize="@dimen/_12sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textColor="@color/black"/>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/navextralay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.87"
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true">

        <RelativeLayout
            android:id="@+id/l1"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/_50sdp"
            android:background="@color/white"
            android:layout_gravity="start"
            android:gravity="center_vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="10dp"
                android:layout_gravity="start"
                android:layout_marginLeft="10dp">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="     Menage your Profile Details"
                    android:textSize="@dimen/_14sdp"
                    android:textAllCaps="true"
                    android:textColor="@color/secondary_color_red"
                    android:id="@+id/user_profilename"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp" />


            </LinearLayout>




        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbarSize="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_5"
                    android:paddingLeft="@dimen/_25sdp"
                    android:paddingRight="@dimen/padding_20"
                    android:text="First Name*"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_14sp"
                    android:textStyle="normal" />


                <EditText
                    android:id="@+id/user_fname_edt"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginLeft="@dimen/padding_20"
                    android:layout_marginTop="@dimen/padding_5"
                    android:layout_marginRight="@dimen/padding_20"
                    android:background="@drawable/buttonstyle_round_white"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:textSize="@dimen/txt_12sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_5"
                    android:paddingLeft="@dimen/_25sdp"
                    android:paddingRight="@dimen/padding_20"
                    android:text="Last Name*"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_14sp"
                    android:textStyle="normal" />


                <EditText
                    android:id="@+id/user_lstname_edt"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginLeft="@dimen/padding_20"
                    android:layout_marginTop="@dimen/padding_10"
                    android:layout_marginRight="@dimen/padding_20"
                    android:background="@drawable/buttonstyle_round_white"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:textSize="@dimen/txt_12sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_5"
                    android:paddingLeft="@dimen/_25sdp"
                    android:paddingRight="@dimen/padding_20"
                    android:text="Mobile Number"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_14sp"
                    android:textStyle="normal" />


                <EditText
                    android:id="@+id/user_email_edt"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginLeft="@dimen/padding_20"
                    android:layout_marginTop="@dimen/padding_10"
                    android:layout_marginRight="@dimen/padding_20"
                    android:background="@drawable/buttonstyle_round_white"
                    android:inputType="phone"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:textSize="@dimen/txt_12sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_5"
                    android:paddingLeft="@dimen/_25sdp"
                    android:paddingRight="@dimen/padding_20"
                    android:text="Email"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_14sp"
                    android:textStyle="normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_20"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/padding_20"
                    android:background="@drawable/buttonstyle_round_white"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    tools:ignore="RtlCompat">

                    <Spinner
                        android:id="@+id/user_gender_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:padding="8dp" />
                </LinearLayout>

                <EditText
                    android:id="@+id/phone_edit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginLeft="@dimen/padding_20"
                    android:layout_marginTop="@dimen/padding_10"
                    android:layout_marginRight="@dimen/padding_20"
                    android:background="@drawable/buttonstyle_round_white"

                    android:inputType="textEmailAddress"
                    android:maxLength="8"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:textSize="@dimen/txt_12sp"

                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_5"
                    android:paddingLeft="@dimen/_25sdp"
                    android:paddingRight="@dimen/padding_20"
                    android:text="mukafa Membership No"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_14sp"
                    android:textStyle="normal" />

                <EditText
                    android:id="@+id/user_wedani_edt"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginLeft="@dimen/padding_20"
                    android:layout_marginTop="@dimen/padding_10"
                    android:layout_marginRight="@dimen/padding_20"
                    android:background="@drawable/buttonstyle_round_white"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:textSize="@dimen/txt_12sp"
                    android:visibility="visible"

                    />


              <!--  <TextView
                    android:id="@+id/user_Date_of_birth_edt"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginLeft="@dimen/padding_20"
                    android:layout_marginTop="@dimen/padding_10"
                    android:layout_marginRight="@dimen/padding_20"
                    android:background="@drawable/buttonstyle_round_white"
                    android:hint="Date of Birth (DD/MM/YYYY)"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:textSize="@dimen/txt_12sp" />-->

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_5"
                    android:paddingLeft="@dimen/_25sdp"
                    android:paddingRight="@dimen/padding_20"
                    android:text="Date of Birth"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_14sp"
                    android:textStyle="normal" />

                <EditText
                    android:id="@+id/user_mukafa_membership_edt"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginLeft="@dimen/padding_20"
                    android:layout_marginTop="@dimen/padding_10"
                    android:layout_marginRight="@dimen/padding_20"
                    android:background="@drawable/buttonstyle_round_white"
                    android:hint="Mukafa Membership No"
                    android:inputType="text"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:textSize="@dimen/txt_12sp"
                    android:visibility="gone" />


                <EditText
                    android:id="@+id/user_Password_edt"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginLeft="@dimen/padding_20"
                    android:layout_marginTop="@dimen/padding_10"
                    android:layout_marginRight="@dimen/padding_20"
                    android:background="@drawable/buttonstyle_round_white"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:textSize="@dimen/txt_12sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_5"
                    android:paddingLeft="@dimen/_25sdp"
                    android:paddingRight="@dimen/padding_20"
                    android:text="Gender"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_14sp"
                    android:textStyle="normal" />

                <EditText
                    android:id="@+id/user_confirm_Password_edt"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginLeft="@dimen/padding_20"
                    android:layout_marginTop="@dimen/padding_10"
                    android:layout_marginRight="@dimen/padding_20"
                    android:background="@drawable/buttonstyle_round_white"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:textSize="@dimen/txt_12sp" />


                <Button
                    android:id="@+id/Continue_btn"
                    android:layout_width="280dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/padding_20"
                    android:background="@drawable/buttonstyle_round_blue"
                    android:padding="5dp"
                    android:text="Cancel"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_14sp"
                    android:textStyle="bold" />


                <Button
                    android:id="@+id/Save_btn"
                    android:layout_width="280dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/padding_10"
                    android:layout_marginBottom="@dimen/padding_20"
                    android:background="@drawable/buttonstyle_round_red"
                    android:padding="5dp"
                    android:text="Save"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_14sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>


</LinearLayout>