<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!-- <RelativeLayout
             android:id="@+id/rlayoutimage"
             android:layout_width="match_parent"
             android:layout_height="@dimen/_200sdp">

             <ImageView
                 android:scaleType="fitXY"
                 android:id="@+id/imageView"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:src="@drawable/login_banner" />
         </RelativeLayout>-->

        <RelativeLayout
            android:id="@+id/rlayoutimage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="44dp"
                android:src="@drawable/login_banner" />
        </RelativeLayout>


        <!--   <ImageView
               android:id="@+id/imageView"
               android:layout_width="match_parent"
               android:layout_height="150dp"
               android:layout_alignParentBottom="true"
               android:layout_marginTop="@dimen/padding_20"
               android:src="@drawable/login_banner" />-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_5"
            android:paddingLeft="@dimen/padding_20"
            android:paddingRight="@dimen/padding_20"
            android:text="Sign Up"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_14sp"
            android:textStyle="normal" />


        <EditText
            android:id="@+id/user_fname_edt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/padding_20"
            android:layout_marginTop="@dimen/padding_5"
            android:layout_marginRight="@dimen/padding_20"
            android:paddingStart="@dimen/_15sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:background="@drawable/buttonstyle_round_white"
            android:hint="First Name* "
            android:padding="8dp"
            android:singleLine="true"
            android:textSize="@dimen/txt_12sp" />


        <EditText
            android:id="@+id/user_lstname_edt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/padding_20"
            android:layout_marginTop="@dimen/padding_10"
            android:layout_marginRight="@dimen/padding_20"
            android:paddingStart="@dimen/_15sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:background="@drawable/buttonstyle_round_white"
            android:hint="Last Name*"
            android:padding="8dp"
            android:singleLine="true"
            android:textSize="@dimen/txt_12sp" />


        <EditText
            android:id="@+id/user_email_edt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/padding_20"
            android:layout_marginTop="@dimen/padding_10"
            android:layout_marginRight="@dimen/padding_20"
            android:paddingStart="@dimen/_15sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:background="@drawable/buttonstyle_round_white"
            android:hint="Email*"
            android:padding="8dp"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            android:textSize="@dimen/txt_12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_20"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/padding_20"
            android:background="@drawable/buttonstyle_round_white"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:ignore="RtlCompat">

            <Spinner
                android:id="@+id/user_gender_spinner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:padding="8dp" />
        </LinearLayout>

        <EditText
            android:id="@+id/phone_edit"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/padding_20"
            android:layout_marginTop="@dimen/padding_10"
            android:layout_marginRight="@dimen/padding_20"
            android:paddingStart="@dimen/_15sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:background="@drawable/buttonstyle_round_white"
            android:hint="Phone Number"
            android:inputType="number"
            android:maxLength="10"
            android:padding="8dp"
            android:singleLine="true"
            android:textSize="@dimen/txt_12sp"

            />

        <EditText
            android:id="@+id/user_wedani_edt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/padding_20"
            android:layout_marginTop="@dimen/padding_10"
            android:layout_marginRight="@dimen/padding_20"
            android:background="@drawable/buttonstyle_round_white"
            android:hint="Wedding Anniversary"
            android:padding="8dp"
            android:singleLine="true"
            android:textSize="@dimen/txt_12sp"
            android:visibility="gone"

            />


        <TextView
            android:id="@+id/user_Date_of_birth_edt"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/padding_20"
            android:layout_marginTop="@dimen/padding_10"
            android:layout_marginRight="@dimen/padding_20"
            android:paddingStart="@dimen/_15sdp"
            android:background="@drawable/buttonstyle_round_white"
            android:hint="Date of Birth (DD/MM/YYYY)"
            android:padding="8dp"
            android:singleLine="true"
            android:textSize="@dimen/txt_12sp" />


        <EditText
            android:id="@+id/user_mukafa_membership_edt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/padding_20"
            android:layout_marginTop="@dimen/padding_10"
            android:layout_marginRight="@dimen/padding_20"
            android:background="@drawable/buttonstyle_round_white"
            android:hint="Mukafa Membership No"
            android:inputType="text"
            android:padding="8dp"
            android:singleLine="true"
            android:textSize="@dimen/txt_12sp"
            android:visibility="gone" />


        <com.subhrajyoti.passwordview.PasswordView
            android:id="@+id/user_Password_edt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/padding_20"
            android:layout_marginTop="@dimen/padding_10"
            android:layout_marginRight="@dimen/padding_20"
            android:paddingStart="@dimen/_15sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:background="@drawable/buttonstyle_round_white"
            android:hint="Password*"
            android:inputType="textPassword"
            android:padding="8dp"
            android:singleLine="true"
            android:textSize="@dimen/txt_12sp" />

        <com.subhrajyoti.passwordview.PasswordView
            android:id="@+id/user_confirm_Password_edt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/padding_20"
            android:layout_marginTop="@dimen/padding_10"
            android:layout_marginRight="@dimen/padding_20"
            android:background="@drawable/buttonstyle_round_white"
            android:hint="Confirm Password*"
            android:paddingStart="@dimen/_15sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:inputType="textPassword"
            android:padding="8dp"
            android:singleLine="true"
            android:textSize="@dimen/txt_12sp" />


        <Button
            android:id="@+id/Continue_btn"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/padding_10"
            android:layout_marginBottom="@dimen/padding_20"
            android:background="@drawable/buttonstyle_round_blue"
            android:padding="5dp"
            android:text="Continue"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_14sp"
            android:textStyle="bold" />
    </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:gravity="center"
                android:src="@drawable/ic_back"
                android:textAllCaps="false"
                app:tint="@android:color/white" />
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:gravity="center"
            android:text=""
            android:textSize="@dimen/_16sdp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/btn_logout2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textAllCaps="false"
                app:tint="@android:color/white" />
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>