<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:gravity="center"
        android:visibility="visible">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/footer_Home_ll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/footer_home_img"
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/ic_home" />

                <TextView
                    android:id="@+id/footer_home_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:text="Home"
                    android:textSize="11dp"
                    android:visibility="visible"
                    />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/footer_categories_ll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <!--android:src="@drawable/con"-->

                <ImageView
                    android:id="@+id/footer_categories_img"
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/categories_grey" />

                <TextView
                    android:id="@+id/footer_categories_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:text="Categories"
                    android:textSize="11dp"
                    android:visibility="visible"
                    />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/footer_cart_ll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <!--android:src="@drawable/con"-->

                <ImageView
                    android:id="@+id/footer_cart_img"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/cart_grey" />

                <TextView
                    android:id="@+id/footer_Cart_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:text="Cart"
                    android:textSize="11dp"
                    android:visibility="visible"
                    />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/footer_myAccount_ll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/footer_profile_img"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:src="@drawable/profile_grey" />

                <TextView
                    android:id="@+id/footer_profile_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:gravity="center"
                    android:text="My Account"
                    android:textSize="11dp"
                    android:visibility="visible"
                    android:theme="@style/Theme.MaterialComponents.Light"/>
            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>

</LinearLayout>